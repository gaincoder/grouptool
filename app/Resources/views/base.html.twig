    {% block flashes %}
        {% if app.session.flashbag.peekAll|length > 0 %}

            <div class="row">
                <div class="col-sm-12">
                    {{ session_flash() }}
                </div>
            </div>
        {% endif %}
    {% endblock flashes %}

    {% block content_row %}

