{% trans_default_domain 'FOSUserBundle' %}


<form role="form" action="{{ path("fos_user_security_check") }}" method="post" class="login-form">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}
    <div class="form-group">
        <label class="sr-only" for="form-username">Username</label>
        <input type="text" name="_username" value="{{ last_username }}" required="required" placeholder="Benutzername"
               class="form-username form-control" id="form-username">
    </div>
    <div class="form-group">
        <label class="sr-only" for="form-password">Password</label>
        <input type="password" name="_password" required="required" placeholder="Passwort"
               class="form-password form-control" id="form-password">
    </div>
    <div class="form-group">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
        <label for="remember_me"> an mich erinnern</label>
    </div>
    <button type="submit" class="btn btn-success" name="_submit">Einloggen!</button>
</form>

